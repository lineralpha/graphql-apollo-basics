{
  "name": "graphql-apollo-server",
  "version": "1.0.0",
  "description": "GraphQL Apollo Server",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "codegen": "graphql-codegen --watch --config codegen.ts",
    "postbuild": "node copy-schema.js",
    "build": "tsc",
    "dev": "concurrently \"npm run codegen\" \"nodemon --watch src --exec ts-node ./src/index.ts\"",
    "start": "npm run build && node ./dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.0",
    "@graphql-codegen/typescript-resolvers": "4.3.0",
    "@parcel/watcher": "^2.4.1",
    "@types/node": "^22.7.7",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "graphql": "^16.9.0"
  }
}
